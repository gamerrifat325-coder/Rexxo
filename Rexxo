<script>
  // =============================
  // PLACEHOLDER MODE: EMPTY VIDEO FEED
  // =============================
  // Abhi videos empty rakho, future me log upload karenge
  const videos = []; // empty = placeholder message

  // =============================
  const container = document.getElementById('videoContainer');

  if(videos.length === 0){
    const noVideo = document.createElement('div');
    noVideo.className = 'no-video';
    noVideo.innerHTML = '<p>No video uploaded yet. Please upload a video.</p>';
    container.appendChild(noVideo);
  } else {
    videos.forEach(video => {
      const div = document.createElement('div');
      div.className = 'video';
      div.innerHTML = `
        <iframe src="${video.src}" frameborder="0" allowfullscreen></iframe>
        <h2>${video.title}</h2>
      `;
      container.appendChild(div);
    });
  }
</script>

